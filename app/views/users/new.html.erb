<h1>Sign Up</h1>
<%= form_with model: @user, url: users_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :admin, "Admin (check for admin access)" %>
    <%= form.check_box :admin %>
  </div>
  <div>
    <%= form.submit "Sign Up" %>
  </div>
<% end %>
<%= link_to "Log In", new_login_path %>
